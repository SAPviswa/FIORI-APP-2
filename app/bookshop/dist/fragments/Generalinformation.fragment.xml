<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <form:SimpleForm
        id="idBooksDetailsForm"
        editable="false"
        layout="ColumnLayout"
        columnsM="2"
        columnsL="3"
        columnsXL="4"
        
    >
        <Label
            id="idNameLabel"
            text="Author Name"
        />
        <Text
            id="idNameText"
            text="{author}"
        />
        <Label
            id="idEmailLabel"
            text="Title"
        />
        <Text
            id="idEmailText"
            text="{title}"
        />
        <Label
            id="idPhoneLabel"
            text="Stock"
        />
        <Text
            id="idPhoneText"
            text="{stock}"
        />
        <Label
            id="idpublicationLabel"
            text="PublicationYear"
        />
        <Text
            id="idPublicationText"
            text="{publicationYear}"
        />
    </form:SimpleForm>
</core:FragmentDefinition>
